<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip" >

    <ImageView
        android:id="@+id/iv_clean_startup_icon"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_margin="5dip"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_clean_startup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dip"
        android:layout_toRightOf="@+id/iv_clean_startup_icon"
        android:text="Large Text"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_clean_startup_packagename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_clean_startup_icon"
        android:layout_alignLeft="@+id/tv_clean_startup_name"
        android:layout_margin="5dip"
        android:text="Medium Text"
        android:textColor="@color/black_light"
        android:textSize="15sp" />



</RelativeLayout>