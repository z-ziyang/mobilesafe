<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip" >

    <ImageView
        android:id="@+id/iv_clean_icon"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_margin="3dip"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/iv_clean_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_clean_icon"
        android:text="程序名称"
        android:layout_marginTop="10dip"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/iv_clean_codesize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_clean_appname"
        android:layout_alignParentRight="true"
        android:text="代码大小" 
        android:layout_marginTop="3dip"
        android:textSize="10sp"
        android:textColor="@color/black_light" />
    <View
        android:layout_marginTop="10dip"
       android:layout_alignBottom="@+id/iv_clean_icon"
       android:background="@color/black_light"
       android:layout_height="1dip"
       android:layout_width="fill_parent"
       />

</RelativeLayout>