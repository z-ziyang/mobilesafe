<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/text_title_style"
        android:text="3.设置安全号码"
        tools:ignore="HardcodedText" />

    <TextView
        style="@style/text_content_style"
        android:text="SIM卡变化后:\n报警短信会发送到安全号码上!" />
    <EditText 
        android:id="@+id/ed_contact"
         android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:hint="请输入安全号码!"
        android:inputType="phone"
        android:background="@android:drawable/editbox_background_normal"
        />
    <Button 
        android:onClick="selectContact"
        android:layout_width="fill_parent"
        android:layout_height="40dip"  
        android:text="选择联系人"
        android:background="@drawable/button_bg_selector"
        />
    <LinearLayout
        android:layout_marginTop="10dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView style="@style/image_off_style" />
        <ImageView style="@style/image_off_style" />
        <ImageView style="@style/image_on_style" />
        <ImageView style="@style/image_off_style" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="center"
            android:src="@drawable/phone" />
        <Button style="@style/button_pre_style"/>
        <Button style="@style/button_next_style" />
    </RelativeLayout>

</LinearLayout>